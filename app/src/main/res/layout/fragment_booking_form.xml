<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.bookingForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="63dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ict_logo"/>

        <TextView
            android:id="@+id/subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book tutor"
            android:textColor="#066040"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/tutorName"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_background"
                    android:hint="Tutor Name"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/tutorLastName"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_background"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tutorModule"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_background"
                    android:hint="Tutor module"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tutorEmail"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_background"
                    android:hint="Enter your email"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_background"
                    android:hint="Enter your phone number"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/studentEmail"
                    android:layout_width="349dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_background"
                    android:hint="Please Enter you Email"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/light_green_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Please Select Time"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/timePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time"
                    />
                <TextView
                    android:id="@+id/TimePick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="this is the selected Time"
                    android:layout_alignBottom="@+id/timePicker"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Please Select the date "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/DatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    />

                <TextView
                    android:id="@+id/DatePick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/timePicker"
                    android:hint="this is the selected date"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Booking Fee 100/ph"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Book"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/blue_button"
                    android:backgroundTint="#008000"
                    android:text="Book Tutor"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>